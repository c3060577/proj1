#include <stdio.h>
#include <string.h>
int
main ()
{
  char message[100], ch, jh, enc[100];
  int i, key;
  printf ("enter a message to encrypt:\n");
  scanf (" %[^\n]%", &message);
  printf ("enter key:\n");
  scanf ("%d", &key);
  
  i=0;
   while(i<=100)
    {
        ch = message[i];
        jh = ch + key;
        if (ch > 'z')
	        {
	        ch = ch - 'z';
    	    }
    
        enc[i] = jh;
      i = i + 1;
      jh = 32-key;
    }
  printf ("%s\n", message);
  printf ("%s\n", enc); 

  return 0;
}
