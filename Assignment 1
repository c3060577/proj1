#include <stdio.h>

int main()
{
   int i, x,key,ch;                //initialiases counter i
                                //x for switch cases encrypt and decrypt
                                //Key for rotation cypher 
   char message[100];           //message to be an array
//inputs the message
   printf("\nPlease enter a string:\t");    
    scanf (" %[^\n]s", &message);
//inputs the key  
    printf("\nPlease enter a Key:\t");   
    scanf ("%d", &key);
//inputs the message  decide to encrypt or decrypt
 
   printf("Enter \n1 to Encrypt \n2 to decrypt\n");
   scanf("%d", &x);


   switch(x)
   {
//encrypt  
   case 1:
      for(i = 0; message[i] != '\0'; ++i){
		ch = message[i];
		
		if(ch >= 'a' && ch <= 'z'){
			ch = ch + key;
			
			if(ch > 'z'){
				ch = ch - 'z' + 'a' - 1;
			}
			
			message[i] = ch;
		}
		else if(ch >= 'A' && ch <= 'Z'){
			ch = ch + key;
			
			if(ch > 'Z'){
				ch = ch - 'Z' + 'A' - 1;
			}
			
			message[i] = ch;
		}
	}
	
	printf("Encrypted message: %s", message);
      break;
      
//decrypt  
   case 2:
     for(i = 0; message[i] != '\0'; ++i){
		ch = message[i];
		
		if(ch >= 'a' && ch <= 'z'){
			ch = ch - key;
			
			if(ch < 'a'){
				ch = ch + 'z' - 'a' + 1;
			}
			
			message[i] = ch;
		}
		else if(ch >= 'A' && ch <= 'Z'){
			ch = ch - key;
			
			if(ch < 'A'){
				ch = ch + 'Z' - 'A' + 1;
			}
			
			message[i] = ch;
		}
	}
	
	printf("Encrypted message: %s", message);
      break;

   default:
      printf("\nError\n");
   }
   return 0;
}
